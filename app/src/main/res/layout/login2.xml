<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DEF8F8"
    tools:context=".LogoPage1">

    <TextView
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-120dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/acme"
        android:text="    mentor"
        android:textColor="#37B7BF"
        android:textSize="70dp" />


    <TextView
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="-120dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/acme"
        android:text="me"
        android:textColor="#FFC20A"
        android:textSize="70dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:layout_marginStart="-120dp"
        app:srcCompat="@drawable/mmm" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="450dp"
        android:layout_height="600dp"
        android:layout_marginTop="200dp"
        android:background="@color/BackdropBlue"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/gr" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Email" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="315dp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/dialog_holo_light_frame" />

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="315dp"
        android:inputType="text"
        android:textColor="#BABABA"
        android:text="Email" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Password" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="395dp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/dialog_holo_light_frame" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="395dp"
        android:inputType="text"
        android:textColor="#BABABA"
        android:text="Password" />






    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="435dp"
        android:backgroundTint="#50C3CA"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="190dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="Forgot Your Password?" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="600dp"/>

    <TextView
    android:id="@+id/textView77"
    android:layout_width="350dp"
    android:layout_height="50dp"
    android:layout_marginTop="620dp"
    android:layout_marginLeft="75dp"
    android:textSize="16dp"
    android:textColor="@color/white"
    android:text="Dont Have An Account?" />

    <TextView
        android:id="@+id/textView78"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="620dp"
        android:layout_marginLeft="245dp"
        android:textSize="16dp"
        android:textColor="#0000FF"
        android:text="Sign Up" />

    <Button
    android:id="@+id/button"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="75dp"
        android:backgroundTint="@color/white"
        android:textColor="#37B7BF"
        android:textSize="20dp"
        android:text="Login" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button0"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="470dp"/>
</RelativeLayout>