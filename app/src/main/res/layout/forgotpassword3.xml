<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DEF8F8"
    tools:context=".LogoPage1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="Forgot Your Password?"
        android:textColor="#157177"
        android:textSize="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button2"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@color/BackdropBlue"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/acme"
        android:text="←"
        android:textColor="#157177"
        android:textSize="60dp"  />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="150dp"
        android:text="Don't worry! It happens. Please enter the email associated with your account."
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Email" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="275dp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/dialog_holo_light_frame" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="275dp"
        android:inputType="text"
        android:textColor="#BABABA"
        android:text="Email" />



    <Button
        android:id="@+id/button3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="#157177"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button41"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="100dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/button4"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="240dp"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="75dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:text="Remember Your Password?" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="380dp"
        android:linksClickable="false"
        android:text="Login"
        android:textColor="#157177"
        android:textSize="17dp"
        android:textStyle="" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="420dp"
        android:layout_height="100dp"
        android:layout_marginStart="-120dp"
        app:srcCompat="@drawable/mm" />
</RelativeLayout>